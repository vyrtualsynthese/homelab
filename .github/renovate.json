{
  "baseBranches": ["develop"],
  "extends": ["config:recommended", ":dependencyDashboard", "docker:enableMajor"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "argocd": {
    "fileMatch": ["\\.yaml$"]
  },
  "ignorePaths": [
    "cluster/helm/_archive/**",
    "kubectl/**",
    "ansible/**",
    "cluster/infrastructure/**"
  ],
  "packageRules": [
    {
      "matchCurrentValue": "/^(?<major>\\d+)(?:\\.(?<minor>\\d+)(?:\\.(?<patch>\\d+))?)?-(?<compatibility>.+)-(?<build>\\d+)(?:-r(?<revision>\\d+))?$/",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "bitnami/**",
        "docker.io/bitnami/**",
        "gcr.io/bitnami-containers/**"
      ],
      "versioning": "regex:^(?<major>\\d+)(?:\\.(?<minor>\\d+)(?:\\.(?<patch>\\d+))?)?(:?-(?<compatibility>.+)-(?<build>\\d+)(?:-r(?<revision>\\d+))?)?$"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "fireflyiii/core",
        "fireflyiii/data-importer"
      ],
      "versioning": "loose"
    }
  ]
}
